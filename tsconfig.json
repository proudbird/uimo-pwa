{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitOnError": false,
    "noEmit": false,
    
    "jsx": "preserve",
    "paths": {
      "./*": ["./platform/*"],
      "@/*": ["./platform/*"],
      "app/*": ["./app/*"],
    }
  },
  "include": [
    "platform",
    "app"
  ],
  "exclude": ["controller"]
}
